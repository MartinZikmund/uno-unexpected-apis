<Page
    x:Class="UnexpectedApisDemo.Shared.Views.VibrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnexpectedApisDemo.Shared.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:usercontrols="using:UnexpectedApisDemo.Shared.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <usercontrols:SamplePageHeader Title="Vibration" />

        <Button Grid.Row="1" Click="Vibrate_Tap" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/VibrationBig.png" HorizontalAlignment="Center" Stretch="None" VerticalAlignment="Center" />
        </Button>

        <Image Grid.Row="2" Source="/Assets/Code/Vibration.png" />
    </Grid>
</Page>
