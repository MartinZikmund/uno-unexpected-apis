<UserControl
    x:Class="UnexpectedApisDemo.Shared.UserControls.GeopositionDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

  <StackPanel>
	<TextBlock>
	  <Run FontWeight="Bold">Latitude: </Run>
	  <Run x:Name="LatitudeRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">Longitude: </Run>
	  <Run x:Name="LongitudeRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">Altitude: </Run>
	  <Run x:Name="AltitudeRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">Accuracy: </Run>
	  <Run x:Name="AccuracyRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">AltitudeAccuracy: </Run>
	  <Run x:Name="AltitudeAccuracyRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">Heading: </Run>
	  <Run x:Name="HeadingRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">Speed: </Run>
	  <Run x:Name="SpeedRun" />
	</TextBlock>
	<TextBlock>
	  <Run FontWeight="Bold">Timestamp: </Run>
	  <Run x:Name="TimestampRun" />
	</TextBlock>
  </StackPanel>
</UserControl>
