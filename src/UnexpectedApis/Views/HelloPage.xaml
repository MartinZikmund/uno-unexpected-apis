<Page
    x:Class="UnexpectedApis.Views.HelloPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnexpectedApis.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:UnexpectedApis.UserControls"
    mc:Ignorable="d">

    <Grid RowSpacing="16" RowDefinitions="Auto,Auto,*" Margin="20">
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{ThemeResource TitleTextBlockStyle}"
            Text="Unexpected APIs in Uno Platform"
            TextAlignment="Center" />
        <TextBlock TextAlignment="Center" Grid.Row="1" Text="Explore the unexpected APIs that you can find in Uno Platform" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
        <Image Grid.Row="2" Stretch="Uniform" Source="ms-appx:///Assets/AppLogo.png" Width="300" Height="300" />
    </Grid>
</Page>
