<local:SamplePage x:Class="UnexpectedApis.Views.TableViewPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="using:UnexpectedApis.Views"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:usercontrols="using:UnexpectedApis.UserControls"
                  xmlns:tableview="using:WinUI.TableView"
                  mc:Ignorable="d">

    <usercontrols:SamplePageControl Title="DataGrid"
                                    CodeSnippet="{x:Bind Code}"
                                    DocsUri="https://platform.uno/docs/articles/uno-community-toolkit.html"
                                    IconUri="{x:Bind IconUri}">
        <ContentControl Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ><!--IsEnabled="{x:Bind Model.AccelerometerAvailable, Mode=OneWay}"-->

            <tableview:TableView ItemsSource="{Binding Plants}"
                                 AutoGenerateColumns="False"
                                 SelectionMode="Extended"
                                 ShowExportOptions="True"
                                 GridLinesVisibility="All">

                <tableview:TableView.Columns>
                    <tableview:TableViewTextColumn Header="Plant Name"
                                                   Binding="PlantName" />
                    <tableview:TableViewTextColumn Header="Count"
                                                   Binding="PlantsCount" />
                    <tableview:TableViewTextColumn Header="Type"
                                                   Binding="FruitOrVegetable" />
                    <tableview:TableViewDateColumn Header="Plant Date"
                                                   Binding="PlantDate" />
                    <tableview:TableViewCheckBoxColumn Header="Watered"
                                                       Binding="IsWatered" />
                </tableview:TableView.Columns>
            </tableview:TableView>

        </ContentControl>
    </usercontrols:SamplePageControl>
</local:SamplePage>
