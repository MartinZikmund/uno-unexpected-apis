<local:SamplePage x:Class="UnexpectedApis.Views.TableViewPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="using:UnexpectedApis.Views"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:usercontrols="using:UnexpectedApis.UserControls"
                  xmlns:tv="using:WinUI.TableView"
                  mc:Ignorable="d">

    <usercontrols:SamplePageControl Title="TableView"
                                    CodeSnippet="{x:Bind Code}"
                                    DocsUri="https://github.com/w-ahmad/WinUI.TableView"
                                    IconUri="{x:Bind IconUri}">

        <tv:TableView ItemsSource="{x:Bind Model.Plants}"
                      AutoGenerateColumns="False"
                      SelectionMode="Extended"
                      ShowExportOptions="True"
                      GridLinesVisibility="All">

            <tv:TableView.Columns>
                <tv:TableViewTextColumn Header="Plant Name"
                                        Binding="PlantName" />
                <tv:TableViewTextColumn Header="Count"
                                        Binding="PlantsCount" />
                <tv:TableViewComboBoxColumn Header="Type"
                                            Binding="FruitOrVegetable" />
                <tv:TableViewDateColumn Header="Plant Date"
                                        Binding="PlantDate" />
                <tv:TableViewCheckBoxColumn Header="Watered"
                                            Binding="IsWatered" />
            </tv:TableView.Columns>
        </tv:TableView>

    </usercontrols:SamplePageControl>
</local:SamplePage>
