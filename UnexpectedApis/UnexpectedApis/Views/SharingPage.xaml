<Page
    x:Class="UnexpectedApisDemo.Shared.Views.SharingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnexpectedApisDemo.Shared.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:UnexpectedApisDemo.Shared.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <usercontrols:SamplePageHeader Title="Sharing" />

        <Grid Grid.Row="1">
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Click="Share_Click">
                <StackPanel Spacing="8">
                    <SymbolIcon Symbol="Share" />
                    <TextBlock Text="Share me!" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
