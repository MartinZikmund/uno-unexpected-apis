<Page
    x:Class="UnexpectedApisDemo.Shared.Views.FlashlightPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnexpectedApisDemo.Shared.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:UnexpectedApisDemo.Shared.UserControls"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <usercontrols:SamplePageHeader Title="Flashlight" />

        <Grid Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center" Visibility="{x:Bind ViewModel.NoSensor, Mode=OneWay}">No flashlight available.</TextBlock>

            <ToggleButton HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="{x:Bind ViewModel.FlashlightAvailable,Mode=OneWay}" CornerRadius="50" Width="100" Height="100" IsChecked="{x:Bind ViewModel.FlashlightOn, Mode=TwoWay}">Flashlight</ToggleButton>
        </Grid>
    </Grid>
</Page>
