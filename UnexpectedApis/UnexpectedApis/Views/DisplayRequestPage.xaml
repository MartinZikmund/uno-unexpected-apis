<Page
    x:Class="UnexpectedApis.Views.DisplayRequestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnexpectedApis.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:UnexpectedApis.UserControls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <usercontrols:SamplePageHeader Title="Display request" />

        <StackPanel
            Grid.Row="1"
            Padding="12"
            Spacing="8">
            <TextBlock Text="Toggling the switch will keep the screen even if device is idle." />
            <CheckBox
                x:Name="DisplayRequestToggle"
                Checked="DisplayRequest_Toggled"
                Content="Keep screen on" />
        </StackPanel>

        <Image
            Grid.Row="2"
            MaxHeight="240"
            Source="/Assets/Code/DisplayRequestCode.png" />
    </Grid>
</Page>
