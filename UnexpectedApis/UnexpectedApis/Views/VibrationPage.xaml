<Page
    x:Class="UnexpectedApis.Views.VibrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnexpectedApis.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:UnexpectedApis.UserControls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <usercontrols:SamplePageHeader Title="Vibration" SupportsMacos="False" />

        <Button
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Vibrate_Tap">
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/VibrationBig.png"
                Stretch="None" />
        </Button>

        <Image
            Grid.Row="2"
            MaxHeight="240"
            Source="/Assets/Code/VibrationCode.png" />
    </Grid>
</Page>
