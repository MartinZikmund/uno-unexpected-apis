<UserControl
    x:Class="UnexpectedApis.UserControls.CodeSampleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnexpectedApis.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        Padding="20"
        Background="{ThemeResource HeaderBackground}"
        RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            FontFamily="ms-appx:///UnexpectedApis/Assets/Fonts/CascadiaCode.ttf#Cascadia Code"
            FontSize="20"
            Text="{x:Bind Content, Mode=OneWay}"
            TextWrapping="Wrap" />
        <Button>
            <SymbolIcon Symbol="Copy" />
        </Button>
    </Grid>
</UserControl>
