<UserControl
    x:Class="UIApis.UserControls.CodeSampleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UIApis.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid MaxHeight="300">
        <Grid
            Padding="20"
            Background="{ThemeResource HeaderBackground}"
            RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollViewer>
                <TextBlock
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    FontFamily="ms-appx:///UIApis/Assets/Fonts/CascadiaCode.ttf#Cascadia Code"
                    FontSize="14"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind Code, Mode=OneWay}"
                    TextWrapping="Wrap" />
            </ScrollViewer>
            <Button
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Copy_Click">
                <SymbolIcon Symbol="Copy" />
            </Button>
        </Grid>
    </Grid>
</UserControl>
